<Window x:Class="Domino.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Domino"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListView 
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Name="OpponentHandListView"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        Orientation="Horizontal"
                        ItemHeight="40"
                        ItemWidth="40"
                        Background="Yellow"
                        HorizontalAlignment="Center"
                        >

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <ListView 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Name="TableListView"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        Orientation="Horizontal"
                        ItemHeight="40"
                        ItemWidth="40"
                        Background="Yellow"
                        HorizontalAlignment="Center"
                        >

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <ListView 
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            Name="MyHandListView"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        Orientation="Horizontal"
                        ItemHeight="40"
                        ItemWidth="40"
                        Background="Yellow"
                        HorizontalAlignment="Center"
                        >

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <ListView 
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Name="BankListView"
            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
            ScrollViewer.VerticalScrollBarVisibility="Disabled"
            >
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel
                        Orientation="Vertical"
                        ItemHeight="40"
                        ItemWidth="40"
                        Background="Yellow"
                        HorizontalAlignment="Center"
                        >

                    </WrapPanel>
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>
        <Button
            Height="50"
            Width="100"
            HorizontalAlignment="Right"
            Name="TakeButton"
            Content="Take"
            Click="TakeButton_Click"
            ></Button>
    </Grid>
</Window>
